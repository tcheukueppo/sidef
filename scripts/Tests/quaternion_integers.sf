assert(%n[2, 5, 7, 11, 17, 19, 79, 163, 193, 239, 317, 353, 659, 709, 1049, 1103].all {|n|    # OEIS: A066408
    (Quaternion(3, 1, 1, 1)/2)**n - 1 -> norm.is_prime
})

assert_eq(43 % Quaternion(15,17,19,23), Quaternion(43) % Quaternion(15,17,19,23))

